 #include "util.h"
 #include "netbase.h"
+#include <algorithm>
 
 #ifndef WIN32
 # include <arpa/inet.h>
 #endif
 
+size_t strnlen(const char *str, size_t strsz)
+{
+    return std::find(str, str + strsz, 0) - str;
+}
